<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/icon/cdnjs.cloudflare.com_ajax_libs_font-awesome_6.4.2_css_all.min.css" rel="stylesheet" />
    <link href="~/lib/icon/cdnjs.cloudflare.com_ajax_libs_font-awesome_6.4.2_css_brands.min.css" rel="stylesheet" />
    <link href="~/lib/icon/cdnjs.cloudflare.com_ajax_libs_font-awesome_6.4.2_css_fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/icon/cdnjs.cloudflare.com_ajax_libs_font-awesome_6.4.2_css_regular.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/attp.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        @await Html.PartialAsync("_Header")
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        @await Html.PartialAsync("_Footer")
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<attp.Models.ProductCategory>

@{
    ViewData["Title"] = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="p-5">
    <p>
        <a asp-action="CreateProductCategories">Tạo mới danh mục</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>Tính năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ProductCategories)
            {
                <tr>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        <a asp-action="UpdateProductCategories" asp-route-id="@item.Id">Cập nhập</a> |
                        <a class="delete-category" style="cursor:pointer" data-category-id="@item.Id" >Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript" src="//code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/js/productcategory.js"></script>